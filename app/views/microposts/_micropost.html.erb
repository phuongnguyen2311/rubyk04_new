<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
     <%= micropost.content %>
     <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words micropost.created_at %> ago.
    <% if correct_user?(micropost.user)%>
      <%= link_to "delete", "javascript:void(0)" ,"data-post-id": micropost.id, class: 'btn-delete'  %>
    <% end %>
  </span>

  <span class="list-comment">
    <% micropost.comments.each do |comment| %>
      <div class="form-outline list-cmt-span" style="margin-left: 8%; margin-right: 8%;">
        <span><%= link_to gravatar_for(comment.user, size: 40), comment.user, class: 'avatar-cmt' %>
          <p class="p-comment" data-commment-id=<%=comment.id%>><%= comment.content %></p>
            <% if correct_user?(comment.user)%>
              <%= link_to "delete", "javascript:void(0)" , class: 'btn-del-comment'  %>
            <% end %>
        </span>
      </div>
    <% end %>
  </span>

  <span class="user-comment">
    <div class="form-outline" style="margin-left: 8%; margin-right: 8%;">
      <%= link_to gravatar_for(current_user, size: 40), current_user, class: 'avatar-cmt' %>
      <input type="text" id="formControlDefault" class="form-control in-comment" placeholder="What's on your mind, <%= current_user.name %>?" />
    </div>
  </span>
</li>

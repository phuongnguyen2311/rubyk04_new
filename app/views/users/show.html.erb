<%= javascript_include_tag "user/show.js" %>
<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    <section class="micropost_form">
      <%= render "shared/micropost_form" %>
    </section>
  </aside>
  <div class="col-md-8">
    <% unless correct_user?(@user) %>
      <div id="follow_form">
        <% if current_user.following?(@user) %>
          <%= render "unfollow" %>
        <% else %>
          <%= render "follow"%>
        <% end %>
      </div>
    <% end %>
    <% if @microposts.any? %>
      <h3>Microposts (<%= @microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
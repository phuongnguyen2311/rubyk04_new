<% provide :title, t("log_in") %>
<h1 class='title'><%= t("login_form.title") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
    <%= f.label :email, t("login_form.label_email") %>
    <%= f.email_field :email, class: "form-control" %>
    <%= f.label :password, t("login_form.label_pwd") %>
    <%= f.password_field :password, class: "form-control" %>
    <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span>Remember me on this computer</span>
    <% end %>
    <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
    <br>
    <p><%= t "new_user?" %><%= link_to t("sign_up_now!"), register_path %></p>
    <%= link_to "Forgot password", new_password_reset_path, class: 'forgot_pwd' %>
  </div>
</div>
